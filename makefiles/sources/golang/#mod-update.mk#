.PHONY: mod-update
mod-update: go-version mod-tidy mod-vendor go-mod-verify

## -----------------------------------------------------------------------
## Intent: Verify go.mod & go.sum content
## -----------------------------------------------------------------------
.PHONY: mod-verify
go-mod-verify :
	$(call banner-enter,Target $@)
	${GO} mod verify
	$(call banner-leave,Target $@)

## -----------------------------------------------------------------------
## Intent: Display command version
## -----------------------------------------------------------------------
.PHONY: go-version
go-version :
	$(call banner-enter,Target $@)
	${GO} version
	$(call banner-leave,Target $@)

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
.PHONY: mod-tidy
mod-tidy :
	$(call banner-enter,Target $@)
	${GO} mod tidy
	$(call banner-leave,Target $@)

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
.PHONY: mod-vendor
mod-vendor : mod-tidy
mod-vendor :
	$(call banner-enter,Target $@)
	$(if $(LOCAL_FIX_PERMS),chmod o+w $(CURDIR))
	${GO} mod vendor
	$(if $(LOCAL_FIX_PERMS),chmod o-w $(CURDIR))
	$(call banner-leave,Target $@)

## -----------------------------------------------------------------------
## Intent: Display target usage
## -----------------------------------------------------------------------
help ::
	@echo
	@echo '[GOLANG: mod-update]'
	@printf '  %-30.30s %s\n' 'mod-update'\
	  '[ALIAS] make go-version mod-tidy mod-vendor'	
	@printf '  %-30.30s %s\n' 'mod-tidy'\
	  'Update module deps, reformat source'
	@printf '  %-30.30s %s\n' 'mod-vendor'\
	  'Rebuild vendor/ directory with all packages'

mod-update: go-version mod-tidy mod-vendor

# [EOF]
